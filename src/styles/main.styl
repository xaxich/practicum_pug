colorText = #444400

back(size)
  background-color #f1f1f1
  box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
  padding size + "%"
  margin 0 0 1% 0
 
html
  color colorText

.nav
  display flex
  height 100px
  flex-direction column
  back(0)
  background-image url("../images/bg.jpg")
  padding 0.2%
  justify-content space-between
  align-items center
  color white
  font-size: 1.3em
  
  &__title
    display inline
    margin 1% 0
    text-align center
      
  &__menu
    display flex
    grid-gap 10%
    width 60%
    justify-content space-between
    margin 0 auto
    
    &__button
      display inline-block
      color #DEDEDE
      text-align center
      text-decoration: none
      width: 33.33%
      &_active
        width: 33.33%
        text-decoration: none
        text-align center
        color #DD3F7F
        
        &:hover
          background-color #666666
        
      &:hover
        background-color #666666

.content
  display block
  width 95%
  margin 1% auto
  
  &__title
    width 100%
    text-align center
    background-color LightGrey
    margin 0 auto
    padding 5px 0
    
    & h2
      margin 0
  
  &__images
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-gap 15px
    margin 1% 0
    
    & img
      width 100%
      transition transform 0.3s ease
    
      &:hover
        transform scale(1.1)
  
  &__information
    display block
    back(1)
    width 100%
    box-sizing border-box 
    text-align justify
    text-indent 1.25em
    background-color #fffff0

    &__graph-settings
      margin 1% 0
      display grid
      grid-template-columns repeat(4, max-content)
      grid-gap 5px 10px
  
      &__column1
        margin 0 20px
        font-weight bold
        text-align center
        grid-column 1/3
    
      &__column2
        margin 0 20px
        font-weight bold
        text-align center
        grid-column 3/5
    
    &__filter-settings
      margin 2% 0
 
      &__row
        display flex
        margin: 8px 10px
        gap 0.5em

    &__sort-settings
      margin 2% 0
      display grid
      grid-template-columns repeat(4, max-content)
      grid-gap 10px 10px
    
    & table
      width 100%
      border 1.5px solid
      margin auto
      text-align left
      & th
      & td
        border 1.5px solid
        padding 4px 8px
    
       & th
        text-align center

  &__topic
    
    display grid
    grid-template-columns 2.03fr 1fr
    margin-bottom 1%
    grid-gap 10px
    
    &__item
      display flex
      background-color #fffff0
      flex-direction column
      align-items center
      border solid 2px grey
      padding 1%
      
      & img
        width 100%
        object-fit fill
      
      & h2
        margin 0.2em 0
        
      & p
        text-indent 1.25em
        text-align justify
        margin 0.2em 0
        
  &__article
    display grid
    grid-template-columns repeat(2, 1fr)
    grid-template-rows repeat(3, 1fr)
    grid-gap 10px
    
    &__section
      display grid
      back(0)
      background-color #fffff0
      grid-template-columns repeat(2, 1fr)
      grid-template-rows max-content 1frs
      justify-items center
      align-items center
      
      transition transform 0.4s ease
    
      &:hover
        transform scale(1.05)
      
      & h2
        margin 0
      
      & p
        grid-column 1 / 3;
        text-align justify
        margin 1% 2%
        
      & img
        width: 80%

details
  margin 1% 0

  
.footer 
  back(0)
  display grid
  grid-template-columns 2fr 1fr
  background-color #DDDDDD
  
  & p 
    padding 1%
    margin 0
    color black
    
  &__right
    text-align right

@media (max-width: 460px)
  
  .nav
    height 155px
    
    &__menu
      flex-direction column
      align-items center
      width: 100%
      grid-gap 8px
      padding-bottom 2px
      &__button
        width 90%
        
        &_active
          width 90%

@media (max-width: 800px)
  
  
  .nav
    
    &__menu
      width: 90%
  
  .content
    
    &__topic
      
      display grid
      grid-template-columns 1fr
      grid-template-rows auto-fit
      
      &__item
        display flex
        background-color #fffff0
        flex-direction column
        align-items center
        border solid 2px grey
        padding 1%
        
        & img
          width 100%
          object-fit fill
        
        & h2
          margin 0.2em 0
          
        & p
          text-indent 1.25em
          text-align justify
          margin 0.2em 0
      
    &__information
      &__filter-settings
        &__row
          display flex
          flex-direction column
          
          & input[type="text"]
            margin-left 20px
            width 200px

     
    &__article
      display grid
      grid-template-columns repeat(2, 1fr)
      grid-template-rows repeat(5, 1fr)
      grid-gap 10px
      justify-items center
      
      &__section
        padding 4px
        
        &:last-child
          grid-column 1 / 3
          width 50%
          
  
  
  

@media (max-width: 600px)
  
  .content
    width 100%
    &__topic
      
      display grid
      grid-template-columns 1fr
      grid-template-rows auto-fit
          
    &__article
      grid-template-columns repeat(1, 1fr)
      grid-template-rows repeat(9, 1fr)
      
      &__section
        padding 4px
        
        & h2
          margin 0
        
        
        
        &:last-child
          grid-column 1 / 2
          width 100%

  .footer
    grid-template-columns 1fr
    grid-template-rows 1fr 1fr
    margin-top 5px
    
    & p
     text-align center
     
    &__right
     text-align center